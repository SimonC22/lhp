<% provide(:title, @event.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @event.name %>

      </h1>
  	  <div class="span4">
	      <h2>
	        <%= "Event type:" %>
	        <%= @event.event_type %>
	      </h2>
	  </div>

      <div class="span4">
	      <h2>
	        <%= "Date:" %>
	        <%= @event.date.strftime("%-d %b %Y") %>
	      </h2>
      </div>

      <div class="span4">
	      <h2>
	        <%= "Reference:" %>
	        <%= @event.reference %>
	      </h2>
      </div>

    </section>
  </aside>




</div>