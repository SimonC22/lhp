<% provide(:title, 'Add Event') %>
<h1>Add Event</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@event) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name_of_event %>
      <%= f.text_field :name %>

      <%= f.label :date %>
      <%= f.date_field :date %>

      <%= f.label :type_of_event%>
      <%= f.text_field :type %>

      <%= f.label :country_id %>
      <%= f.number_field :country_id %>

      <%= f.label :reference %>
      <%= f.text_field :reference %>

      <%= f.submit "Add Event", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>