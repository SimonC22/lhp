<% provide(:title, 'Add Country') %>
<h1>Add Country</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@country) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :start_event %>
      <%= f.select(:event_id, Event.find(:all).collect {|u| [u.name, u.id]}, :prompt => 'Select') %>

      <%= f.submit "Add Country", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>